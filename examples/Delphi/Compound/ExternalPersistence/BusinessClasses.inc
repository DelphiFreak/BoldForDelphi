procedure TItem.PrepareUpdate;
var
  Highest: integer;
  i: integer;
begin
  if ItemNo = -1 then
  begin
    Highest := 0;
    for i := 0 to Order.Items.Count-1 do
      if Order.Items[i].ItemNo > Highest then
        Highest := Order.Items[i].ItemNo;
